{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.1.0.json",
  "width": 400,
  "height": 270,
  "title": {
    "text": "Dairy Production by Region",
    "dx": -200,
    "align": "left"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/josepht777/FIT3179/refs/heads/main/Visualization2/1964-2022%20Dairy.csv",
    "format": {"type": "csv"}
  },
  "encoding": {
    "x": {
      "field": "Year",
      "title": null,
      "type": "ordinal",
      "axis": {"labelAngle": -30}
    },
    "y": {
      "field": "Number",
      "type": "quantitative",
      "title": "Amount of Dairy (Tonnes)"
    },
    "color": {
      "field": "Region",
      "legend": {"title": "Region", "orient": "bottom", "columns": 3},
      "scale": {
        "range": [
          "#E69F00",
          "#56B4E9",
          "#009E73",
          "#F0E442",
          "#0072B2",
          "#D55E00",
          "#CC79A7",
          "#999999"
        ]
      }
    },
    "opacity": {
      "condition": {
        "test": "datum.Region === 'Victoria'",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {"field": "Number", "type": "quantitative", "format": ","},
      {"field": "Region", "type": "nominal"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "line", "tooltip": true, "point": {"filled": true}}
    },
    {
      "mark": {
        "type": "text",
        "dy": 80,
        "dx": 0,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "transform": [
        {"filter": "datum.Year == '1997-2008'"},
        {"filter": "datum.Number == 23926100"}
      ],
      "encoding": {
        "text": {
          "value": ["Victoria has the highest", "number of Cattles", "for dairy production",  "from 1964-2022"]
        },
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Number", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "font": "Arial",
    "title": {"fontSize": 17}
  }
}
